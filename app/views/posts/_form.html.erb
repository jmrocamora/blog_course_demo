<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<h2><%= pluralize(@post.errors.count, "error") %> no se pudo guardar su articulo por:</h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :title %><br>
	<%= f.text_field :title %><br>

	<br>
	<br>

	<%= f.label :content, "Escribe tu articulo aqui" %><br>
	<%= f.text_area :content %><br>

	<br>
	<br>

	<%= f.submit %>

<% end %>