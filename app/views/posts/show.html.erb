<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @post.created_at.strftime('%A, %d %B') %></p>
		<h1><%= @post.title %></h1>
		<hr>
	</header>
	<div id="content">
		<!-- Con "simple_format" damos formato a la hora de mostrar en html  -->
		<%= markdown @post.content %>
	</div>

	<hr>

	<div id="share_box">
		<p>Share "Tareas pendientes"</p>
		<!-- Twitter -->
		<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @jmrocamora - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
			<i class="fa fa-twitter"></i>
		</a>
		<!-- Facebook -->
		<a onclick="javascript:window.open('http://facebook.com/share.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
			<i class="fa fa-facebook"></i>
		</a>
		<!-- Google Plus -->
		<a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
			<i class="fa fa-google-plus"></i>
		</a>
	</div>

	<hr>

	<%= render 'disqus'%>

</div>	

<%= link_to "Editar", edit_post_path(@post) %>