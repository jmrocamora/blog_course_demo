<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @project.created_at.strftime('%A, %d %B') %></p>
		<h1><%= @project.title %></h1>
		<hr>
	</header>
	<div id="content">
		<!-- Con "simple_format" damos formato a la hora de mostrar en html  -->
		<%= markdown @project.description %>
		
		<div class="button_wrapper">
			<a href="<%= @project.link %>" class="project_button" target="_blank">Visit <%= @project.title %></a>
		</div>
	</div>

		<% if user_signed_in? %>
		<div id="admin_links">
			<%= link_to "Editar Proyecto", edit_project_path(@project) %>
			<%= link_to "Borrar Proyecto", project_path(@project), method: :delete, data: { confirm: "Â¿Esta seguro?"} %>
		</div>
	<% end %>

	<hr>
</div>